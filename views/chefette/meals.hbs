{{#if user}}

{{!-- nav bar --}}

<nav class="navbar is-paddingless is-marginless" role="navigation" aria-label="main navigation">
  <div class="navbar-brand is-paddingless is-marginless">
    <a class="navbar-item is-paddingless is-marginless">
      <img src="/images/chef-icon.png" width="50" height="50">
      <h1 class="title-logo">
        {{title}}
      </h1>
    </a>

    <a role="button" class="navbar-burger burger" aria-label="menu" aria-expanded="false" data-target="navbarBasicExample">
      <span aria-hidden="true"></span>
      <span aria-hidden="true"></span>
      <span aria-hidden="true"></span>
    </a>
  </div>

  <div class="navbar-end">
    <div class="navbar-item">
      <div class="buttons">
        <a class="button is-fourth-color" href="/signup">
          <strong>Sign up</strong>
        </a>

        <a class="button is-light" href="/login">
          Log in
        </a>
      </div>
    </div>
  </div>
  </div>
</nav>

{{!-- recipe catalog --}}
<div class="container">
  <div class="content">
    <h1 class="subtitle">My meals</h1>
    <p>Plan your next recipes</p>
  </div>
  <div>
    {{#each resultsRecipes}}
    <li>{{this.title}} <a href="/meals/{{this._id}}"> See more </a> <br> <button  class="recipe-item button" attr-recipe-id="{{this._id}}"> add </button></li>    
    {{/each}}
  </div>
</div>


{{!-- My recipes --}}

<div class="container">
  <div class="content">
    <h1 class="subtitle">Added meals</h1>
    <p>Your yummy recipes</p>
  </div>
  <div>
    {{#each user.0.recipes}}
    <li>{{this.title}} <a href="/meals/{{this._id}}"> See more </a> <br> </li>    
    {{/each}}
  </div>
</div>

{{/if}}

