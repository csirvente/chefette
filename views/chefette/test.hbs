{{!-- My recipes --}}

<div class="container">
  <div class="content">
    <h1 class="subtitle">Added meals</h1>
    <p>Your yummy recipes</p>
  </div>
  <div>
    {{#each user.0.recipes}}
    <li>{{this.title}} <a href="/meals/{{this._id}}"> See more </a> <br> </li>
    {{/each}}
  </div>
</div>

{{!-- recipe catalog --}}
<div class="container">
  <div class="content">
    <h1 class="subtitle">My meals</h1>
    <p>Plan your next recipes</p>
  </div>

  <section class="section has-background-light">
    <div class="container">
      <div class="columns scrolling-wrapper-flexbox">


        {{#each resultsRecipes}}

        <div class="column is-one-third card">
          <article class="media notification is-primary-color">
            <figure class="media-left">
              <span class="icon is-medium">
                <i class="fab fa-2x fa-css3-alt"></i>
              </span>
            </figure>
            <div class="media-content">
              <div class="content">
                <h1 class="title is-size-4">{{this.title}}</h1>
                <p class="is-size-5">
                  Bulma is a modern CSS framework from @jgthms, based on Flexbox.
                  Using Bulma, we can describe our website's design using just classes. <span class="emoticon">·ïï( ·êõ )·ïó</span>
                </p>
                <div> <a href="/meals/{{this._id}}"> Cook it! </a> </div>
                <button class="recipe-item button"  attr-recipe-id="{{this._id}}"> add </button>
              </div>
            </div>
          </article>
        </div>

        {{/each}}

      </div>
    </div>
  </section>

</div>





